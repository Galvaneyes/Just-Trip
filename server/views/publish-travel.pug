extends _layout
block meta
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
    meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
block styles
    link(rel="stylesheet" href="./calendar-files/styles/calendar.css")
block scripts
    script(src="./calendar-files/js/date-format.js")
    script(src="./calendar-files/js/ui.js")
    script(src="./calendar-files/js/date-picker.js")
block container
    div
        form.form-horizontal(method="POST" action="/publicate")
            fieldset
                legend  Fill in the following fields to make a new travel group::
                div.form-group
                    label.col-lg-2.control-label Name of travel group
                    div.col-lg-10
                        input.form-control(type="text" placeholder="Name of advertisement" name="headline")
                div.form-group
                    label.col-lg-2.control-label(for='select') Country
                    div.col-lg-10
                        select#select.form-control(name="country")
                            option(value="", disabled selected hidden ) Pick a country or add it in Places if missing
                            each country in countries
                                option(value=country.name) #{country.name}                            
                div.form-group
                    label.col-lg-2.control-label City
                    div.col-lg-10
                        input.form-control(type="text" placeholder="City" name="city")
                        select#selectCity.form-control(name="city")
                            option(value="", disabled selected hidden ) City
                            each city in cities
                                option(value=city.name) #{city.name}  
                            option(value="Other") Other 
                div.form-group
                    label.col-lg-2.control-label End date
                    div.col-lg-10
                        p
                            input#datepicker(type="text" name="endJoinDate")
                div.form-group
                    label.col-lg-2.control-label(for="from")   From
                    div.col-lg-10
                        p
                            input#from(type="text" name="beginTourDate")
                div.form-group
                    label.col-lg-2.control-label(for="to") To
                    div.col-lg-10                                
                        p
                            input#to(type="text" name="endTourDate")
                div.form-group
                    label.col-lg-2.control-label Capacity
                    div.col-lg-10
                        input.form-control(type="number" min="1" placeholder="Capacity" name="maxUser")
                div.form-group
                    label.col-lg-2.control-label Price per person
                    div.col-lg-10
                        input.form-control(type="number" name="price" step="0.01" min="5" max="20000" placeholder="Price")
                div.form-group
                    label.col-lg-2.control-label(for="textArea") Description
                    div.col-lg-10
                        textarea#textArea.form-control(rows="6" name="description")
                        span.help-block Add information about the whole trip here...
                div.form-group
                    div.col-lg-10.col-lg-offset-2
                        button.btn.btn-success(type='submit') Publish
                        button.btn.btn-danger(type='reset') Cancel
