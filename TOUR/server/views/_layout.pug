doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
        meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
        block meta
        title Document
        link(rel="stylesheet" href="public/styles/bootstrap-css.css")
        link(rel="stylesheet" href="public/styles/main.css")
        block styles

    body
        nav.navbar.navbar-default
            div.container-fluid.navigation
                div.navbar-header
                    button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="true")
                        span.sr-only
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href="#")
                        img(src="images/logo.png" style="height: 40px") 

                div#bs-example-navbar-collapse-1.navbar-collapse.collapse.in(aria-expanded="true")
                    ul.nav.navbar-nav
                        if isAuthenticated
                            li
                                a.btn.btn-default.btn-lg.nav-items(href="#") Home
                            li
                                a.btn.btn-default.btn-lg.nav-items(href="#") Publish
                            li
                                a.btn.btn-default.btn-lg.nav-items(href="#") Search
                            li
                                a.btn.btn-default.btn-lg.nav-items(href="#") Places
                            li
                                a.btn.btn-default.btn-lg.nav-items(href="#") Profile
                        else
                            li
                                a.btn.btn-default.btn-lg.nav-items(href="#") Home
                            li
                                a.btn.btn-default.btn-lg.nav-items(href="#") Search
                            li
                                a.btn.btn-default.btn-lg.nav-items(href="#") Places
                    ul.nav.navbar-nav.navbar-right
                        if isAuthenticated
                            li
                                a.btn.btn-default.btn-lg.nav-items(href="#") Log Out
                        else 
                            li
                                a.btn.btn-default.btn-lg.nav-items(href="#") Login
                            li
                                a.btn.btn-default.btn-lg.nav-items(href="#") Register
        #container
        block container

        footer
            div.panel-footer.footer
                p.footer-text Copyright Â© Travel 2016. All right reserved.

    script(src="public/bower_components/jquery/dist/jquery.js")
    script(src="public/bower_components/bootstrap/dist/js/bootstrap.js")
    block scripts
    


