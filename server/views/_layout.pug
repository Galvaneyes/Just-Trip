doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
        meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
        block meta
        title Just-Trip
        link(rel="stylesheet" href="/static/styles/bootstrap-css.css")
        link(rel="stylesheet" href="/static/styles/main.css")
        link(rel="stylesheet" href="/static/styles/animate.css")
        link(rel="stylesheet" href="/static/styles/notifications.css")
        link(rel="stylesheet" href="/static/bower_components/toastr/toastr.css")
        block styles

    body
        nav.navbar.navbar-default
            div.container-fluid.navigation
                div.navbar-header
                    button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="true")
                        span.sr-only
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href="/")
                        img(src="/static/images/logo.png" style="height: 40px") 

                div#bs-example-navbar-collapse-1.navbar-collapse.collapse.in(aria-expanded="true")
                    ul.nav.navbar-nav
                        if user && user.isLogged
                            li
                                a.btn.btn-default.btn-lg.nav-items(href="/") Home
                            li
                                a.btn.btn-default.btn-lg.nav-items(href="/publicate") Publish
                            li
                                a.btn.btn-default.btn-lg.nav-items(href="/tours") Tours
                            li
                                a.btn.btn-default.btn-lg.nav-items(href="/countries") Places
                            li
                                a.btn.btn-default.btn-lg.nav-items(href="/profile") Profile
                            li
                                a.btn.btn-default.btn-lg.nav-items(href="/about-us") About us
                        else
                            li
                                a.btn.btn-default.btn-lg.nav-items(href="/") Home
                            li
                                a.btn.btn-default.btn-lg.nav-items(href="/tours") Tours
                            li
                                a.btn.btn-default.btn-lg.nav-items(href="/countries") Places
                            li
                                a.btn.btn-default.btn-lg.nav-items(href="/about-us") About us
                    ul.nav.navbar-nav.navbar-right
                        if user && user.isLogged
                            li
                                a.btn.btn-default.btn-lg.nav-items(href="/logout") Log Out
                        else 
                            li
                                a.btn.btn-default.btn-lg.nav-items(href="/login") Login
                            li
                                a.btn.btn-default.btn-lg.nav-items(href="/register") Register
        div.container.home-page
            block container

        div#notification

        footer
            div.panel-footer.footer
                p.footer-text Copyright Â© Just-Trip 2016. All right reserved. 

    script(src="/static/bower_components/jquery/dist/jquery.js")
    script(src="/static/bower_components/bootstrap/dist/js/bootstrap.js")
    script(src="/static/bower_components/toastr/toastr.js")
    script(src="/static/bower_components/handlebars/handlebars.js")
    script(src="/static/scripts/socket.io/socket.io.js")
    script(src="/static/scripts/sockets.js")
    script(src="/static/scripts/main.js")
    block scripts
    

