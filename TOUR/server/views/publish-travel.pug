extends _layout
block meta
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
    meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
block styles
    link(rel="stylesheet" href="./calendar-files/styles.css")
block scripts
    script(src="./calendar-files/date-format.js")
    script(src="./calendar-files/ui.js")
    script(src="./calendar-files/date-picker.js")
block container
    div
        form.form-horizontal
            fieldset
                legend  Fill in the following fields to make a new travel group::
                div.form-group
                    label.col-lg-2.control-label Name of travel group
                    div.col-lg-10
                        input.form-control(type="text" placeholder="Name of advertisement")
                div.form-group
                    label.col-lg-2.control-label(for='select') Country
                    div.col-lg-10
                        select#select.form-control
                            option Bulgaria
                            option Germany
                div.form-group
                    label.col-lg-2.control-label City
                    div.col-lg-10
                        input.form-control(type="text" placeholder="City")
                div.form-group
                    label.col-lg-2.control-label End date
                    div.col-lg-10
                        p
                            input#datepicker(type="text")
                div.form-group
                    label.col-lg-2.control-label(for="from")   From
                    div.col-lg-10
                        p
                            input#from(type="text" name="from")
                div.form-group
                    label.col-lg-2.control-label(for="to") To
                    div.col-lg-10                                
                        p
                            input#to(type="text" name="to")
                div.form-group
                    label.col-lg-2.control-label Capacity
                    div.col-lg-10
                        input.form-control(type="number" placeholder="Capacity")
                div.form-group
                    label.col-lg-2.control-label Price per person
                    div.col-lg-10
                        input.form-control(type="number" name="price" step="0.01" min="5" max="20000" placeholder="Price")
                div.form-group
                    label.col-lg-2.control-label(for="textArea") Description
                    div.col-lg-10
                        textarea#textArea.form-control(rows="6")
                        span.help-block Add information about the whole trip here...
                div.form-group
                    div.col-lg-10.col-lg-offset-2
                        button.btn.btn-success(type='submit') Publish
                        button.btn.btn-danger(type='reset') Cancel
