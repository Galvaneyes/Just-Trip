extends _layout
block container
  
        form.form-horizontal
            fieldset
                legend  Register:
                div.form-group
                    label.col-lg-2.control-label(for="inputEmail") Email
                    div.col-lg-10
                        input#inputEmail.form-control(type="text" placeholder="Email")
                div.form-group
                    label.col-lg-2.control-label Username
                    div.col-lg-10
                        input.form-control(type="text" placeholder="Username")
                div.form-group
                    label.col-lg-2.control-label(for="inputPassword") Password
                    div.col-lg-10
                        input#inputPassword.form-control(type="password" placeholder="Password")
                div.form-group
                    label.col-lg-2.control-label Phone Number
                    div.col-lg-10
                        input.form-control(type="text" placeholder="Phone Number")
                div.form-group
                    label.col-lg-2.control-label(for='select') Gender
                    div.col-lg-10
                        select#select.form-control
                            option Male
                            option Female